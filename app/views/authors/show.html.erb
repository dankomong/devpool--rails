<h1><%= @author.name %> <%="(b. #{@author.birth_year})" %> </h1>

<ol>
  <% @author.books.each do |book| %>
  <li>
    <%=link_to book.title, book_path(book) %>
  </li>
  <% end %>
</ol>

<%= link_to "Edit this Author", edit_author_path(@author) %>

<%= button_to "Delete this Author", @author, method: :delete%>
